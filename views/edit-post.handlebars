<div class="container mt-4">
  <div class="card border text-center">
    <h3 class="card-header">Edit Post</h3>
    <form class="card-body edit-post-form">
      <input type="hidden" name="post-id" value="{{post.id}}" />
      <input type="hidden" name="user-id" value="{{post.user_id}}" />

      <div class="form-group">
        <label for="post-title" class="form-label">Title:</label>
        <input
          type="text"
          value="{{post.post_title}}"
          class="form-control"
          id="post-title"
          name="post-title"
          placeholder="your post title"
        />
      </div>

      <div>
        <label class="form-label" for="content">Make edits to your post body</label>
        <input
          style="height: 100px; width: 500px"
          name="post-content"
          type="text"
          value="{{post.post_content}}"
          class="form-control w-100"
        />
      </div>
      <div class="text-right">
        <button class="btn btn-info mt-4 px-4" type="submit">EDIT</button>
      </div>
    </form>
  </div>
</div>
<script src="/js/edit.js"></script>