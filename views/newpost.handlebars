<div class="container mt-4">
    <h2>Create a new post</h2>
    <form class="mt-4"id="new-post-form">
        <div class="form-group">
            <label for="title">Your Post:</label>
            <input type="text" class="form-control" id="post-title" name="post-title" placeholder="your post title">
        </div>
        <div class="form-group">
            <label for="content">Post Body</label>
            <textarea class="form-control" placeholder="Once upon a time..." name="post-content" id="post-content" rows="5"></textarea>
            </div>
            <button type="submit" class="btn btn-info">Submit</button>
    </form> 
</div>

<script src="/js/newpost.js"></script>
